doctype html
html(ng-app='mainApp')
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/stylesheets/angular-material.css')
		link(rel='stylesheet', href='/stylesheets/themes/indigo-theme.css')
		link(rel='stylesheet', href='/stylesheets/themes/red-theme.css')
		link(rel='stylesheet', href='/stylesheets/themes/cyan-theme.css')
	body
		script(src='/javascripts/jquery-2.1.1.js')
		script(src='/javascripts/moment.js')
		script(src='/javascripts/clock.js')
		script(src='/javascripts/hammerjs/hammer.min.js')
		script(src='/javascripts/angular/angular.js')
		script(src='/javascripts/angular-animate/angular-animate.js')
		script(src='/javascripts/angular-aria/angular-aria.js')
		script(src='/javascripts/angular-material/angular-material.js')
		script(src='/javascripts/angular-youtube.min.js')
		script(src='/javascripts/controllers.js')
		div.buttondemoBasicUsage.doc-content.ng-cloak(ng-controller='MainCtrl', layout='column', ng-cloak)
			div(layout='column', layout-align='center center', md-theme='indigo')
				h1= title
				div.md-whiteframe-z2.inner-cont
					md-toolbar(layout='row')
						div.md-toolbar-tools
							span.md-flex(flex)
								md-button.md-raised.md-primary.md-indigo-theme.nav-btn(ng-click='changePage("home", "Welcome to the home page")').
									Home
								md-button.md-raised.md-primary.md-indigo-theme.nav-btn(ng-click='changePage("js", "Welcome to the JavaScript page")').
									Javascript
								md-button.md-raised.md-warn.nav-btn(ng-click='changePage("youtube", "My Youtube Channel")').
									My Youtube Channel
								md-button.md-raised.md-primary.md-indigo-theme.nav-btn(ng-click='changePage("cpb", "Welcome to the PC building page")').
									Custom PC Buidling
								md-button.md-raised.md-warn.nav-btn.
									Flash
								md-button.md-raised.md-primary.md-indigo-theme.nav-btn(ng-click='changePage("profile", "Welcome to my profile page")').
									Profile
								md-button.md-raised.md-primary.md-indigo-theme.nav-btn(ng-click='changePage("contact", "Welcome to my contact page")').
									Contact
							md-button.md-fab.md-primary(aria-label='sidebar', ng-click='toggleRight()')
								md-tooltip.
									Open Sidebar
								md-icon(icon='/images/sidebar.svg')
							md-button.md-fab.md-primary(md-theme='cyan', ng-click='showAdvanced($event)')
								md-tooltip.
									Show Clock
								md-icon(icon='/images/time.svg', style='top: 7px; position: absolute; left: 16px;')
					block content