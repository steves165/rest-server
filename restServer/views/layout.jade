doctype html
html(ng-app='mainApp')
	head
		meta#viewport(name="viewport", content="width=device-width,minimum-scale=1.0,initial-scale=1.0")
		title= title
		link(rel='stylesheet', href='/stylesheets/bootstrap.css')
		link(rel='stylesheet', href='/stylesheets/angular-material.css')
		link(rel='stylesheet', href='/stylesheets/themes/indigo-theme.css')
		link(rel='stylesheet', href='/stylesheets/themes/red-theme.css')
		link(rel='stylesheet', href='/stylesheets/themes/cyan-theme.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
		script(src='/javascripts/jquery-2.1.1.js')
		script(src='/javascripts/moment.js')
		script(src='/javascripts/clock.js')
		script(src='/javascripts/hammerjs/hammer.min.js')
		script(src='/javascripts/angular/angular.js')
		script(src='/javascripts/angular-ui/ui-bootstrap.js')
		script(src='/javascripts/angular.route.js')
		script(src='/javascripts/angular-animate/angular-animate.js')
		script(src='/javascripts/angular-aria/angular-aria.js')
		script(src='/javascripts/angular-material/angular-material.js')
		script(src='/javascripts/angular-youtube.min.js')
		script(src='/javascripts/angular-app.js')
		script(src='/javascripts/controllers.js')
		script(src='/javascripts/services.js')
		script(src='/javascripts/directives.js')
		div.ng-cloak(ng-controller='MainCtrl', ng-cloak)
			div.container(md-theme='indigo')
				div.title-container.text-center
					h1= title
				div.md-whiteframe-z2.row
					md-toolbar(layout='row')
						div.md-toolbar-tools
							span.col-md-12.hidden-xs.hidden-md.hidden-sm
								md-button.md-raised.md-primary.md-indigo-theme.nav-btn(href='/').
									Home
								md-button.md-raised.md-primary.md-indigo-theme.nav-btn(href='/javascript').
									Javascript
								md-button.md-raised.md-warn.nav-btn(ng-click='changePage("youtube", "My Youtube Channel")').
									My Youtube Channel
								md-button.md-raised.md-primary.md-indigo-theme.nav-btn(href='/custompc').
									Custom PC Buidling
								md-button.md-raised.md-warn.nav-btn.
									Flash
								md-button.md-raised.md-primary.md-indigo-theme.nav-btn(href='/profile').
									Profile
								md-button.md-raised.md-primary.md-indigo-theme.nav-btn(href='/profile').
									Contact
							span.text-center
								md-button.md-raised.md-primary.md-indigo-theme.nav-btn.hidden-lg.navigation-toggle(ng-click="isCollapsed = !isCollapsed").
									Navigation
								div.hidden-lg.collapse-nav(collapse='isCollapsed')
									div(layout='column')
										md-button.md-raised.md-primary.md-indigo-theme.nav-btn(href='/').
											Home
										md-button.md-raised.md-primary.md-indigo-theme.nav-btn(href='/javascript').
											Javascript
										md-button.md-raised.md-warn.nav-btn(ng-click='changePage("youtube", "My Youtube Channel")').
											My Youtube Channel
										md-button.md-raised.md-primary.md-indigo-theme.nav-btn(href='/custompc').
											Custom PC Buidling
										md-button.md-raised.md-warn.nav-btn.
											Flash
										md-button.md-raised.md-primary.md-indigo-theme.nav-btn(href='/profile').
											Profile
										md-button.md-raised.md-primary.md-indigo-theme.nav-btn(href='/profile').
											Contact
							md-button.md-fab.md-primary.nav-fab-button.first-nav-fab.hidden-xs(aria-label='sidebar', ng-click='toggleRight()')
								md-tooltip.
									Open Sidebar
								md-icon(icon='/images/sidebar.svg')
							md-button.md-fab.md-primary.nav-fab-button.hidden-xs(md-theme='cyan', ng-click='showAdvanced($event)')
								md-tooltip.
									Show Clock
								md-icon(icon='/images/time.svg', style='top: 7px; position: absolute; left: 16px;')
					div(layout='row')
						md-content.md-padding.md-indigo-theme.main-content(style='height:600px', layout='column')
							div(style='height:600px')
								block content
					include sidebar